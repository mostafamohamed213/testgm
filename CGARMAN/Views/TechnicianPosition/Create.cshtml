@model CGARMAN.ViewModel.TechnicianViewModels.CreatePositionViewModel
@{
    ViewData["Title"] = "Create Position";
    Layout = "_Authenticated";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4" style="margin-left:10px">
    <h1 class="h3 mb-0 text-gray-800">
        Technician <i style="font-size:large" class="fa fa-arrow-right" aria-hidden="true"></i> Create Position
    </h1>
    <div class="float-right">
        <a id="aDownload" onclick="exportFiles()" class="d-none d-sm-inline-block btn btn-sm btn-secondary text-white shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Download Template
        </a>

        <a href="~/ExcelTemplates/TechnicianPositions.xlsx" style="display:none;" id="aTechnicianPositionsDownload"></a>

        <a onclick="fileImport.click();" class="d-none d-sm-inline-block btn btn-sm btn-success text-white shadow-sm">
            <i class="fas fa-upload fa-sm text-white-50"></i> Import Report
        </a>
        <input type="file" id="fileImport" style="display: none" onchange="importFile();" />
        <a style="margin-right:10px" asp-action="Index" asp-controller="Home" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Back to Home</a>

    </div>
</div>
<hr />
<div class="row" style="margin:1%">
    <div class="col-lg-12">
        <form asp-action="Create" asp-controller="TechnicianPosition" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-xl-12">
                    <div class="row">
                        <div class="col-xl-1" style=" padding-top: 5px;">
                            <label>Name</label>
                        </div>
                        <div class="col-xl-3">
                            <input type="text" asp-for="Name" class="form-control form-control-user" />
                            <span asp-validation-for="Name" style="margin:auto" class="text-danger"></span>

                        </div>
                        <div class="col-xl-6">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" style=" width: 150px; margin: 30px 40px;" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="~/js/TechnicianPositionImportFile.js"></script>

    <script>
        document.getElementById("btncontainerTechnicians").click();
        ToggleColorInDashboard("linkIndexTechniciansPosition");
        document.getElementById("btnGoToTopPage").click();
        document.getElementById("aCollapseTechManagement").click();
    </script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
