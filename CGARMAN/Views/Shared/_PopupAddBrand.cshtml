                </div>

                <h1 style="text-align:center;">
                    <div class="checkmark-circle">
                        <div class="background"></div>
                        <div class="checkmark draw"></div>
                    </div>
                </h1>

            </div>
        </div>
    </div>

</div>
<script>

    function saveBrandWarehouse() {
        document.getElementById("divbgchangeBrand").style.backgroundColor = "#e6e6e6";
        document.getElementById("btnCteInventoryBrand").disabled = true;
        document.getElementById("alertErrorBrand").style.display = "none";

        var form = document.getElementById('frmAddBrand');
        var formData = new FormData(form);
        $.ajax({
            type: "Post",
            url: "/InventoryItemType/SaveBrand",
            data: formData,
            processData: false,
            ///* processData: false,*/
            contentType: false,
            success: function (response) {

                if (response.status > 0) {
                    document.getElementById("divbgchangeBrand").style.backgroundColor = "#fff";
                    document.getElementById("alertErrorBrand").style.display = "none";
                    document.getElementById("btnCteInventoryBrand").disabled = true;
                    $("#btnCloseformCteInventoryBrand").click();
                    $("#successModal").click();
                    $("#selBrandinvItemtype").empty();
                    var option = document.createElement("option");
                    option.text = "-Select-";
                    $('#selBrandinvItemtype').append(option);
                    response.object.forEach(function (i) {
                        var option = document.createElement("option");
                        option.text = i.text;
                        option.value = i.value;
                        $('#selBrandinvItemtype').append(option);
                    });
                    document.getElementById("btnCteInventoryBrand").disabled = false;

                } else if (response.status == 0) {


                    document.getElementById("alertErrorBrand").style.display = "block";
                    document.getElementById("divbgchangeBrand").style.backgroundColor = "#fff";
                    document.getElementById("btnCteInventoryBrand").disabled = false;
                } else if (response.status < 0) {


                    document.getElementById("alertErrorBrand").style.display = "block";
                    document.getElementById("divbgchangeBrand").style.backgroundColor = "#fff";
                    document.getElementById("btnCteInventoryBrand").disabled = false;

                    $("#spnErrorBrand").empty();
                    $("#spnErrorBrand").append("Brand Name is already exists or Empty");
                }

            },
            failure: function (response) {
                throwException(response)
            },
            error: function (response) {
                throwException(response)
            }
        });
        $("#brandName123").val("");
    }
</script>
