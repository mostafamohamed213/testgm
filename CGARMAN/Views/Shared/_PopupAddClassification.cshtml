<script>

    function saveClassificationWarehouse() {
        document.getElementById("divbgchangeClassifications").style.backgroundColor = "#e6e6e6";
        document.getElementById("btnCteInventoryClassifications").disabled = true;
        document.getElementById("alertErrorClassifications").style.display = "none";

        var form = document.getElementById('frmAddClassifications');
        var formData = new FormData(form);
        $.ajax({
            type: "Post",
            url: "/InventoryItemType/SaveClassification",
            data: formData,
            processData: false,
            ///* processData: false,*/
            contentType: false,
            success: function (response) {
                
                if (response > 0) {
                    document.getElementById("divbgchangeClassifications").style.backgroundColor = "#fff";
                    document.getElementById("alertErrorClassifications").style.display = "none";
                    document.getElementById("btnCteInventoryClassifications").disabled = true;
                    $("#btnCloseformCteInventoryClassifications").click();
                    $("#successModal").click();
                    GetClassificationsCostCenterAndUnitsss(response);
                } else {


                    document.getElementById("alertErrorClassifications").style.display = "block";
                    document.getElementById("divbgchangeClassifications").style.backgroundColor = "#fff";
                    document.getElementById("btnCteInventoryClassifications").disabled = false;
                }

            },
            failure: function (response) {
                throwException(response)
            },
            error: function (response) {
                throwException(response)
            }
        });
    }

    function saveClassificationWarehouse2() {
        document.getElementById("divbgchangeClassifications2").style.backgroundColor = "#e6e6e6";
        document.getElementById("btnCteInventoryClassifications2").disabled = true;
        document.getElementById("alertErrorClassifications2").style.display = "none";

        
        $.ajax({
            type: "Post",
            url: "/InventoryItemType/AddClassification",
            data: { "classificationName": $("#ClassificationName123").val(), "warehouseId": $("#WarehouseId76").val() },
            
            success: function (response) {

                if (response.status > 0) {
                    document.getElementById("divbgchangeClassifications2").style.backgroundColor = "#fff";
                    document.getElementById("alertErrorClassifications2").style.display = "none";
                    document.getElementById("btnCteInventoryClassifications2").disabled = true;
                    $("#btnCloseformCteInventoryClassifications2").click();
                    $("#successModal").click();
                    $("#classificationId876").empty();
                    var option = document.createElement("option");
                    option.text = "Please select one";
                    $('#classificationId876').append(option);
                    response.object.forEach(function (i) {
                        var option = document.createElement("option");
                        option.text = i.text;
                        option.value = i.value;
                        $('#classificationId876').append(option);
                    });
                    document.getElementById("btnCteInventoryClassifications2").disabled = false;
                } else if(response.status == 0) {
                    document.getElementById("alertErrorClassifications2").style.display = "block";
                    document.getElementById("divbgchangeClassifications2").style.backgroundColor = "#fff";
                    document.getElementById("btnCteInventoryClassifications2").disabled = false;
                } else if (response.status < 0) {
                    document.getElementById("alertErrorClassifications2").style.display = "block";
                    document.getElementById("divbgchangeClassifications2").style.backgroundColor = "#fff";
                    document.getElementById("btnCteInventoryClassifications2").disabled = false;
                    $("#spnErrorClassifications2").empty();
                    $("#spnErrorClassifications2").append("Model Name is already exists");
                }
               

            },
            failure: function (response) {
                throwException(response)
            },
            error: function (response) {
                throwException(response)
            }
        });
        $("#ClassificationName123").val("");
    }
</script>